<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="10sp" android:layout_marginRight="10sp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/layout_border"
        android:id="@+id/layout_connect_step1_rl"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cstep11"
            android:id="@+id/connect_status_tv"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border"
        android:id="@+id/layout_connect_step2_rl"
        android:layout_below="@id/layout_connect_step1_rl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for a song.."
            android:layout_centerHorizontal="true"
            android:id="@+id/connect_song_receive_tv" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connect_song_receive_tv"
            android:layout_margin="10sp"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
            android:layout_centerHorizontal="true"
            android:id="@+id/connect_song_load_status" />
    </RelativeLayout>
</RelativeLayout>